@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>
<input type="number" min="0" bind="@valor"/>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

@functions {
    
    //[Parameter]
    //private int IncrementAmount { get; set; } = 1;
    
    int valor;
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount+= valor;
    }
}
